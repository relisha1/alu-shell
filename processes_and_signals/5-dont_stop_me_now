#!/usr/bin/env bash
# This script stops the '4-to_infinity_and_beyond' process using the kill command.

# Find the PID of the running '4-to_infinity_and_beyond' process.
pid=$(pgrep -f "4-to_infinity_and_beyond")

# Check if the PID was found.
if [ -n "$pid" ]; then
  # Send the SIGTERM signal to terminate the process.
  kill "$pid"
  echo "Process 4-to_infinity_and_beyond (PID: $pid) has been terminated."
else
  echo "No running '4-to_infinity_and_beyond' process found."
fi

