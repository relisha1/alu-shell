#!/usr/bin/env bash
# This script stops the '4-to_infinity_and_beyond' process using the kill command.

pid=$(ps -eo pid,comm | grep "4-to_infinity_and_beyond" | grep -v "grep" | awk '{print $1}')

if [ -n "$pid" ]; then
  kill "$pid"
  echo "Process 4-to_infinity_and_beyond (PID: $pid) has been terminated."
else
  echo "No running '4-to_infinity_and_beyond' process found."
fi

